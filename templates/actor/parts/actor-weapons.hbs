<ol class='items-list'>
  <li class='item items-header grid grid-5col'>
    <div class='item-name flex-group-center'>{{localize 'Name'}}</div>
    <div class="item-name flex-group-center">{{localize 'Level'}}</div>
    <div class="item-name flex-group-center">{{localize 'Hit Chance'}}</div>
    <div class='item-name flex-group-center'>{{localize 'Roll Formula'}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Weapon'}}' data-type='weapon'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='weapon'}}
      </a>
    </div>
  </li>
  {{#each weapons as |item id|}}
  <li class='item item-list-item grid grid-5col' data-item-id='{{item._id}}'>
    <div class='item-name flex-group-center'>
      <a class='rollable' data-roll-type='item'>
        <h4 class="">{{item.name}}</h4>
      </a>
    </div>
    <div class="item-name flex-group-center">{{item.system.level}}</div>
    <div class="item-name flex-group-center">{{item.system.hitChance}}</div>
    <div class='item-name flex-group-center'>{{item.system.formula}}</div>
    <div class='item-controls'>
      <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Weapon'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Weapon'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>