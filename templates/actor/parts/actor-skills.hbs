<section class="flexcol">
    <div class="grid grid-2col">
        <div class="box">
            <h3 class="flex-group-center">General Skills</h3>
            <ol class='items-list'>
                <li class='item items-header grid grid-3col'>
                    <div class='item-name flex-group-center'>{{localize 'Name'}}</div>
                    <div class="item-name flex-group-center">{{localize 'Level'}}</div>
                    <div class='item-controls'>
                        <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=' Skill'}}'
                            data-type='skill'>
                            <i class='fas fa-plus'></i>
                            {{localize 'DOCUMENT.New' type='skill'}}
                        </a>
                    </div>
                </li>
                {{#each skills as |item id|}}
                {{#ifEquals item.system.skillType 'general'}}
                <li class='item item-list-item grid grid-3col' data-item-id='{{item._id}}'>
                    <div class='item-name flex-group-center'>
                        <a class='describe'>
                            <h4 class="">{{item.name}}</h4>
                        </a>
                    </div>
                    <div class="item-name flex-group-center">{{item.system.level}}</div>
                    <div class='item-controls'>
                        <a class="item-control item-progress" title="Increase Skill Progress">
                            <i class="fas fa-plus"></i>
                            <span class="">Progress</span>
                        </a>
                        <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=' Skill'}}'>
                            <i class='fas fa-edit'></i>
                        </a>
                        <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=' Skill'}}'>
                            <i class='fas fa-trash'></i>
                        </a>
                    </div>
                </li>
                {{/ifEquals}}
