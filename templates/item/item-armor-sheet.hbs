{{! This template is a fallback for when items don't have more specific templates. }}
{{! Generally, you'll want to make more specific templates when possible. }}
<form class='{{cssClass}}' autocomplete='off'>
  <header class='sheet-header'>
    <img class='profile-img' src='{{item.img}}' data-edit='img' title='{{item.name}}' />
    <div class='header-fields'>
      <h1 class='charname'><input name='name' type='text' value='{{item.name}}' placeholder='Name' /></h1>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>Description</a>
    <a class='item' data-tab='attributes'>Attributes</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>

    {{! Description Tab }}
    <div class='tab' data-group='primary' data-tab='description'>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor
      enrichedDescription
      target='system.description'
      engine='prosemirror'
      button=true
      editable=editable
      }}
    </div>

    {{! Attributes Tab }}
    <div class='tab attributes' data-group='primary' data-tab='attributes'>
      <div class="resource">
        <label class='resource-label'>Armor Type</label>
            <select name="system.armorType">
              {{selectOptions system.selectArmor selected=system.armorType valueAttr="key" labelAttr="label"}}
              {{log system.armorType}}
            </select>
        <div class="grid grid-3col">
          <div class="grid-span-1">
            <label class="resource-label">Level</label>
            <input type='text' name='system.level' value='{{system.level}}' data-dtype='String' />
          </div>
          <div class="grid-span-1">
            <label class="resource-label">Armor Points</label>
            <input type='text' name='system.armorPoints' value='{{system.armorPoints}}' data-dtype='String' />
          </div>
          <div class="grid-span-1">
            <label class="resource-label">Durability</label>
            <input type='text' name='system.durability' value='{{system.durability}}' data-dtype='Number' />
          </div>
        </div>
      </div>
    </div>
  </section>
</form>